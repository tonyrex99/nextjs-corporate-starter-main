{
  "collectionName": "components_elements_overlays",
  "info": {
    "displayName": "overlay"
  },
  "options": {},
  "attributes": {
    "buttons": {
      "type": "component",
      "repeatable": true,
      "component": "links.button-link"
    },
    "content": {
      "type": "text",
      "required": true
    },
    "contentColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "colorOpacity": {
      "type": "decimal",
      "min": 0,
      "max": 100
    }
  }
}
