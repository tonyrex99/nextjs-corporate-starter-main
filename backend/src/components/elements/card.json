{
  "collectionName": "components_elements_cards",
  "info": {
    "displayName": "Card"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "borderColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": false,
      "customField": "plugin::color-picker.color"
    },
    "borderPosition": {
      "type": "string",
      "default": "top"
    },
    "picture": {
      "allowedTypes": [
        "images",
        "videos"
      ],
      "type": "media",
      "multiple": false,
      "required": false
    },
    "imageOverlay": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "imageOverlayOpacity": {
      "type": "decimal",
      "max": 100,
      "min": 0,
      "private": true
    },
    "imagePosition": {
      "type": "string"
    }
  }
}
